#include <iostream>
#include <string>
#include <cctype>

using namespace std;

int main()
{
    string line;
    while (getline(cin, line))
    {
        int count = 0;
        bool inWord = false;

        for (char ch : line)
        {
            if (isalpha(ch))
            {
                if (!inWord)
                {
                    count++;
                    inWord = true;
                }
            }
            else
            {
                inWord = false;
            }
        }

        cout << count << '\n';
    }

    return 0;
}
